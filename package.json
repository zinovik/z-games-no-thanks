{
  "name": "z-games-no-thanks",
  "version": "0.0.18",
  "description": "No, Thanks! game module for tiny board games portal",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest --config jestconfig.json",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint"
  },
  "engines": {
    "node": ">=12.6",
    "npm": ">=6.9"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zinovik/z-games-no-thanks.git"
  },
  "author": "Max Zinovik",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/zinovik/z-games-api/issues"
  },
  "homepage": "https://github.com/zinovik/z-games-no-thanks#readme",
  "devDependencies": {
    "@types/jest": "^24.0.17",
    "husky": "^3.0.2",
    "jest": "^24.8.0",
    "prettier": "^1.18.2",
    "ts-jest": "^24.0.2",
    "tslint": "^5.18.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "z-games-base-game": "0.0.22"
  },
  "files": [
    "lib/**/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "npm run format && npm run lint && npm run test && npm run build"
    }
  }
}
